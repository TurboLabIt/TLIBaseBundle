<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:news="http://www.google.com/schemas/sitemap-news/0.9">

    {% for oneUrlData in urlData %}

        <url>
            <loc>{{ oneUrlData.url }}</loc>
            <news:news>
                <news:publication>
                    <news:name>{{ oneUrlData.site.name }}</news:name>
                    <news:language>{{ oneUrlData.site.ln }}</news:language>
                </news:publication>
                <news:publication_date>{{ oneUrlData.date }}</news:publication_date>
                <news:title>{{ oneUrlData.title }}</news:title>
            </news:news>
        </url>

    {% endfor %}

</urlset>
